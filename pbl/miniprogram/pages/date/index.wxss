/**index.wxss**/
/* 
    1rem = 100px 
    1rpx = 1px 
    无论屏幕宽度怎么变化，1rem = 100rpx
*/


.startTime{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  height: 100rpx;
}
.startTime text{
  width: 200rpx;
}
picker{
  flex: 1;
  height: 100%;
}
picker text{
  width: 100%;
  height: 100%;
  display: inline-block;
  padding: 30rpx;
}