.active{
  border-bottom: 2px solid #000
}
.div{
  background: #e8e8e8;
  width:100%;
  height:100%;
  overflow: auto;
}
.tab{
  width:100%;
  display: flex;
  justify-content: space-around;
  background: #fff;
  line-height: 40px;
}
.box{
  margin: 10px;
  background: #fff;
  border-radius: 10px;
  padding:10px;
  margin-bottom: 30px;
}
.box .h3{
  font-size: 13px;
  color: #888;
  display: flex;
  justify-content: space-between;
}
.box .p{
  margin: 15px;
  border-radius: 10px;
  background: #e8e8e8;
  padding:10px 15px;
  font-size: 13px;
  display: flex;
}
.box .p text:first-child{
  flex:1;
  text-align: center;
}
.box .p text:nth-child(2){
  flex:6;
}
.box .p text:last-child{
  flex:1;
  text-align: center;
}
.add{
  border-radius: 50%;
  background: #fff;
  width:50px;
  height:50px;
  font-size: 50px;
  font-weight: 900;
  text-align: center;
  line-height: 40px;
  margin: 0 auto;
}
